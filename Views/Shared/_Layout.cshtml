<!DOCTYPE html>
<html>

@* For Web.Config settings: *@
@using System.Web.Configuration;

<head>

    <link rel="icon" type="image/x-icon" href="/JimradioMaint/favicon.ico" />
    
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css"/>
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
          
</head>

<body>
 
    <div id="BannerDiv" >

        <img id="BannerImage" src="/JimRadioMaint/Images/jimradio_animated.gif" alt="JimRadio icon" />
    
        <span id="BannerSpan" >JimRadio</span>

        <span id="BannerTitle" class="AccentColor">Database Maintenance</span>
           
    </div>

    <!-- JavaScript-disabled processing.  Show this by default.  To test this processing, simply toggle the
         Enable JavaScript setting of your browser and refresh the view of the page. -->

    <div class="page">

       <header>
            <div id="title">

                <h1></h1>

            </div>

            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </nav>
        </header>

        <section id="main">
            @RenderBody()
        </section>

        <footer>
        </footer>

    </div>
</body>

</html>
